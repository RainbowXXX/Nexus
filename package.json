{
  "name": "nexus",
  "productName": "Nexus",
  "version": "0.2.5-alpha",
  "description": "Nexus",
  "main": ".vite/build/main.js",
  "build": {
    "appId": "cn.nihuan.nexus",
    "productName": "Nexus",
    "directories": {
      "output": "build_dist",
      "buildResources": "assets"
	},
	"compression": "maximum",
	"nsis": {
	  "allowToChangeInstallationDirectory": true,
	  "installerIcon": "./src/assets/images/icon.ico",
	  "uninstallerIcon": "./src/assets/images/icon.ico",
      "oneClick": false,
      "perMachine": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "vinciverse",
        "repo": "Nexus"
      }
    ],
    "files": [
      ".vite/**/*"
    ],
    "win": {
      "icon": "./assets/Icon.ico",
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "scripts": {
    "build": "yarn make && echo '应用打包...' && electron-builder && echo '任务结束!'",
    "buildp": "yarn make && echo '应用打包并发布...' && electron-builder --publish=always && echo '任务结束!'",
    "start": "yarn clean && electron-forge start",
    "make": "yarn clean && echo '构建主函数...' && npx tsc && echo '主函数构建完成!' && yarn compress && echo '构建渲染层...' && vite build && echo '渲染层构建完成!'",
    "electron": "electron .",
    "clean": "echo '删除缓存' && if exist .vite ( rmdir /s /q .vite )",
    "compress": "echo '压缩主函数...' && node testTerser.js && echo '压缩完成!'"
  },
  "author": "Nihuan Team <test@nihuan.com>",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron-forge/plugin-vite": "^7.5.0",
    "@electron-forge/shared-types": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.48.0",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.4",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.35",
    "@swc/jest": "^0.2.36",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/crypto-js": "^4.2.2",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/semver": "^7.5.8",
    "autoprefixer": "^10.4.20",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "electron-playwright-helpers": "^1.7.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "storybook": "^8.3.5",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.9"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
